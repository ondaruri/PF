  <% if messages.present? %>
    <% messages.each do |message| %>
      <div class="chat-box">
        <div class="chat-face">
          <%= attachment_image_tag message.user, :image, fallback: "no_image.jpg", size: "50x50" %>
        </div>
        <div class="chat-hukidashi"> <strong><%= message.message %></strong> <br>
          <%= message.created_at.strftime("%Y-%m-%d %H:%M")%>
        </div>
      </div>
    <% end %>
  <% end %>