<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-lg-5 px-sm-0 mx-auto my-5">
    <%= form_with model: @post_ramen, local:true do |f| %>
      <div class="form-group">
        <%= attachment_image_tag @post_ramen, :image, fallback: "no_image.jpg", size: "200x200" %>
      </div>
      <div class="form-group">
        <%= f.label :本文 %>
        <%= f.text_area :content, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :店名 %>
        <%= f.text_field :shop_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address, class: "form-control name" %>
      </div>
      <div class="form-group">
        <div id="star">
          <%= f.label :評価　　 %>
          <%= f.hidden_field :review, id: :review_star %>
        </div>
      </div>
        <%= f.hidden_field :user_id, id: current_user.id, value: current_user.id %>
    </div>
    <div class="col-sm-12 col-lg-5 px-sm-0 mx-auto my-5">
      <div class="search_box">
        タグ
        <div class="search_check_box">
            <% @tags.each do |tag| %>
            <%= f.check_box :tag_list, { multiple: true }, "#{tag.name}", nil %>
            <%= f.label " #{tag.name}", class: "label label-default" %>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存する", class: 'btn btn-secondary form-control' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#star').raty({
    size : 36,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'post_ramen[review]', //登録するモデル名とカラム名を記述
    half: true,
  });
</script>













