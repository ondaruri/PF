<div id="star-rate-<%= @post_ramen.id %>"></div>
          <script>
          $('#star-rate-<%= @post_ramen.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= @post_ramen.review %>,
          });
          </script>