  <%= attachment_image_tag @post_ramen, :image, fallback: "no_image.jpg", size: "400x300" %>
  <p>タイトル</p>
  <p><%= @post_ramen.title %></p>
  <p>本文</p>
  <p><%= @post_ramen.content %></p>
