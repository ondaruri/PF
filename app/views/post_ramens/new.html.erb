<h1>新規投稿画面</h1>

<div class="form">
  <%= form_with model: @post_ramen, local:true do |f| %>
    <h4>画像</h4>
    <%= f.attachment_field :image %>
    <h4>投稿文</h4>
    <%= f.text_area :content %>

    <div id="star">
      <h4>評価</h4>
      <%= f.hidden_field :review, id: :review_star %>
    </div>

    <%= f.fields_for :shops do |t| %>
      <h4>店名</h4>
      <%= t.text_field :name %>
      <h4>住所</h4>
      <%= t.text_field :address %>
  <%= f.submit '投稿' %>
<% end %>
<% end %>
</div>

<script type="text/javascript">
  $('#star').raty({
    size : 36,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'post_ramen[review]', //登録するモデル名とカラム名を記述
    half: true,
  });
</script>
