<div class="container">
  <div class="row">
    <div class="col-5">
      <div class="profile_button">
         <%= link_to '投稿一覧へ⇨', admins_post_ramens_index_path, class: 'btn btn-secondary ' %>
      </div>
    </div>
    <div class="col-7">
      <%= form_with url: admins_user_search_path, method: :get, local: true do |f| %>
       <%  f.label :search, '検索' %>
       <%= f.text_field :search, class: "form-control mr-sm-2", placeholder: 'user_name' %>
       <%= f.submit 'Search', class: "btn btn-secondary" %>
      <% end %>
      <%#= form_tag admins_users_path, :method => 'get' do %>
      <!--<p>-->
        <%#= text_field_tag :search, params[:search] %>
        <%#= submit_tag "Search", :name => nil %>
      <!--</p>-->
      <%# end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-lg-10 px-sm-0 mx-auto my-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>User Name</th>
            <th>Introduction</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to admins_user_show_path(user) do %>
              <%= attachment_image_tag user, :image, fallback: "no_image.jpg", size: "50x50" %>
              <% end %>
            </td>
            <td>
              <%= link_to admins_user_show_path(user) do %>
              <%= user.name %>
              <% end %>
            </td>
            <td>
              <%= user.introduction %>
            </td>
            <td>
              <% if user.is_active == true %>
               <p>入会中</p>
              <% else %>
               <p>退会済み</p>
              <% end %>
            </td>
            <!--<td>-->
            <!--  <%# unless current_user == follower %>-->
            <!--  <%# if current_user.following?(follower) %>-->
            <!--    <%#= link_to 'フォロー外す', unfollow_path(@user.id), class: 'btn btn-secondary', method: :post %>-->
            <!--  <%# else %>-->
            <!--    <%#= link_to 'フォローする', follow_path(@user.id), class: 'btn btn-secondary ', method: :post %>-->
            <!--  <%# end %>-->
            <!--  <%# end %>-->
            <!--</td>-->
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
