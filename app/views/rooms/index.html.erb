<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-10 px-sm-0 mx-auto my-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>User Name</th>
            <th>Last Message</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @another_entries.each do |entry| %>
          <tr>
            <td>
              <%= link_to user_path(entry.user) do %>
              <%= attachment_image_tag entry.user, :image, fallback: "no_image.jpg", size: "50x50" %>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(entry.user) do %>
              <%= entry.user.name %>
              <% end %>
            </td>
            <td>
              <%= Message.find_by(id: entry.room.message_ids.last)&.message %>
            </td>
            <td>
            <div class="follow_button">
              <%= link_to 'メッセージへ', room_show_path(entry.room), class: 'btn btn-secondary ', method: :get %>
            </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
