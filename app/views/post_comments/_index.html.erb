<table class="table">
  <thead>
    <tr>
      <th>user image</th>
      <th>user comment</th>
    </tr>
  </thead>
      <% post_comments.each do |post_comment| %>
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag post_comment.user, :image, fallback: "no_image.jpg", size: "50x50" %>
      </td>
      <td>
        <%= post_comment.content %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>