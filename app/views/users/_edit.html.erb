<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-lg-5 px-sm-0 mx-auto my-5">
    <%= form_with model:user, local:true do |f| %>
      <%= attachment_image_tag(user, :image, size: "50x50", fallback: "ダウンロード.png" ) %>
      <div class="form-group">
        <%= f.label :image %><br>
        <%= f.attachment_field :image, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit "プロフィールを変更する", class: 'btn btn-secondary form-control' %>
      </div>
    <% end %>
    </div>
  </div>
</div>