<%= @user.name %>さんのページだよ<br>
私は<%= @current_user.name %><br>
<%= render 'relationships/follow_button', user: @user %>


<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <div class="icon-user">
          <%= attachment_image_tag @user, :image, fallback: "no_image.jpg", size: "100x100" %>
      </div>
    </div>
    <div class="col-lg-10">
      <div class="row">
        <div class="col-lg-3">
          <%= @user.name %>
        </div>
        <div class="col-lg-2">
          <% if @user == current_user %>
          <%= link_to "新規投稿", new_post_ramen_path %>
          <% end %>
        </div>
        <div class="col-lg-5">
          <% if @user == current_user %>
          <%= link_to "プロフィールを編集", edit_user_path(@user) %>
          <% else %>
          <%= render 'relationships/follow_button', user: @user %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          投稿件数   <%= @user.post_ramens.count %>件
        </div>
        <div class="col-lg-3">
          フォロワー<%= @user.follower_user.count %>人
        </div>
        <div class="col-lg-3">
          フォロー<%= @user.following_user.count %>人
        </div>
      </div>
      <div class="row">
        <%= @user.introduction %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="flex-item">
    <% @user.post_ramens.each do |post_ramen| %>
      <%= link_to post_ramen_path(post_ramen) do %>
      <%= attachment_image_tag(post_ramen, :image, :fill, 250, 250, fallback: "no-image-icon.jpg") %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>

</div><div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: orange;">
      <h2>サイドバー</h2>
    </div>
    <div class="col-lg-8">
      <h5>投稿記事並ぶところ</h5>
    </div>
  </div>
</div>