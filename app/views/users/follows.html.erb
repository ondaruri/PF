<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-10 px-sm-0 mx-auto my-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>User Name</th>
            <th>Introduction</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @user.following_user.each do |following| %>
          <tr>
            <td>
              <%= link_to user_path(following) do %>
              <%= attachment_image_tag following, :image, fallback: "no_image.jpg", size: "50x50" %>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(following) do %>
              <%= following.name %>
              <% end %>
            </td>
            <td>
              <%= following.introduction %>
            </td>
            <td>
              <% if current_user.following?(following) %>
                <%= link_to 'フォロー外す', unfollow_path(@user.id), class: 'btn btn-secondary', method: :post %>
              <% else %>
                <%= link_to 'フォローする', follow_path(@user.id), class: 'btn btn-secondary ', method: :post %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
