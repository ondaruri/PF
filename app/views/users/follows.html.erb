<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-10 px-sm-0 mx-auto my-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>User Name</th>
            <th>Introduction</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @user.following_user.each do |following| %>
          <tr>
            <td>
              <%= link_to user_path(following) do %>
              <%= attachment_image_tag following, :image, fallback: "no_image.jpg", size: "50x50" %>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(following) do %>
              <%= following.name %>
              <% end %>
            </td>
            <td>
              <%= following.introduction %>
            </td>
            <td>
              <% unless current_user == following %>
              <div class="follow_button-<%= following.id %>">
               <%= render 'relationships/follow_button', user: following %>
              </div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
